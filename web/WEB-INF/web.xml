<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>system.controllers.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>system.listener.Listener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>system.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>system.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>system.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetHotelController</servlet-name>
        <servlet-class>system.controllers.GetHotelController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchHotelController</servlet-name>
        <servlet-class>system.controllers.SearchHotelController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewHotelDetailsController</servlet-name>
        <servlet-class>system.controllers.ViewHotelDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>system.controllers.AddToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCartController</servlet-name>
        <servlet-class>system.controllers.UpdateCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCartController</servlet-name>
        <servlet-class>system.controllers.DeleteCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmCartController</servlet-name>
        <servlet-class>system.controllers.ConfirmCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificationCartController</servlet-name>
        <servlet-class>system.controllers.VerificationCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificationResetController</servlet-name>
        <servlet-class>system.controllers.VerificationResetController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordController</servlet-name>
        <servlet-class>system.controllers.ResetPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewBookingController</servlet-name>
        <servlet-class>system.controllers.ViewBookingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetBookingDetailController</servlet-name>
        <servlet-class>system.controllers.GetBookingDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchBookingHistoryController</servlet-name>
        <servlet-class>system.controllers.SearchBookingHistoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBookingController</servlet-name>
        <servlet-class>system.controllers.DeleteBookingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetHotelController</servlet-name>
        <url-pattern>/GetHotelController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchHotelController</servlet-name>
        <url-pattern>/SearchHotelController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewHotelDetailsController</servlet-name>
        <url-pattern>/ViewHotelDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartController</servlet-name>
        <url-pattern>/AddToCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCartController</servlet-name>
        <url-pattern>/UpdateCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCartController</servlet-name>
        <url-pattern>/DeleteCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmCartController</servlet-name>
        <url-pattern>/ConfirmCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificationCartController</servlet-name>
        <url-pattern>/VerificationCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificationResetController</servlet-name>
        <url-pattern>/VerificationResetController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordController</servlet-name>
        <url-pattern>/ResetPasswordController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewBookingController</servlet-name>
        <url-pattern>/ViewBookingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetBookingDetailController</servlet-name>
        <url-pattern>/GetBookingDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchBookingHistoryController</servlet-name>
        <url-pattern>/SearchBookingHistoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBookingController</servlet-name>
        <url-pattern>/DeleteBookingController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>Resource reference to javax.sql.Connection</description>
        <res-ref-name>DBCon</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
